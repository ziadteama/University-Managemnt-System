<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.universitymanagementsystem.HelloController"
           prefWidth="600" prefHeight="400"
           style="-fx-background-color: #f4f4f9;">

    <!-- Login Form Container -->
    <VBox alignment="center" spacing="20" style="-fx-padding: 20;">

        <!-- Welcome Text -->
        <Label text="Welcome to the University!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- Username Field -->
        <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 300; -fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-radius: 25px; -fx-padding: 10; -fx-focus-color: #3498db;"/>

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 300; -fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-radius: 25px; -fx-padding: 10; -fx-focus-color: #3498db;" />

        <!-- Login Button -->
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" style="-fx-pref-width: 300; -fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 25px; -fx-padding: 10; -fx-cursor: hand;"/>

        <!-- Message Label -->
        <Label fx:id="messageLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>

        <!-- Forgot Password Button -->
        <Button fx:id="forgotPasswordButton" text="Forgot Password?" onAction="#handleForgotPassword" style="-fx-pref-width: 300; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 25px; -fx-padding: 10; -fx-cursor: hand;"/>

        <!-- User ID Entry for Forgot Password -->
        <TextField fx:id="forgotPasswordUserIdField" promptText="Enter your User ID" visible="false" style="-fx-pref-width: 300; -fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-radius: 25px; -fx-padding: 10; -fx-focus-color: #3498db;"/>

        <!-- Next Button to show security question -->
        <Button fx:id="nextButton" text="Next" onAction="#handleNextButton" visible="false" style="-fx-pref-width: 300; -fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 25px; -fx-padding: 10; -fx-cursor: hand;"/>

        <!-- Security Question Label -->
        <Label fx:id="securityQuestionLabel" text="Security Question" visible="false" style="-fx-font-size: 16px; -fx-text-fill: #3498db;"/>

        <!-- Security Answer Input -->
        <TextField fx:id="securityAnswerField" promptText="Your Answer" visible="false" style="-fx-pref-width: 300; -fx-font-size: 16px; -fx-background-color: #ffffff; -fx-border-radius: 25px; -fx-padding: 10; -fx-focus-color: #3498db;"/>

        <!-- Verify Button to Show Password -->
        <Button fx:id="verifyButton" text="Verify" onAction="#handleVerifyPassword" visible="false" style="-fx-pref-width: 300; -fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 25px; -fx-padding: 10; -fx-cursor: hand;"/>

        <!-- Password Display After Verification -->
        <Label fx:id="forgotPasswordResultLabel" text="" visible="false" style="-fx-font-size: 16px; -fx-text-fill: #2ecc71; -fx-font-weight: bold;"/>

    </VBox>

</StackPane>
